<form action="/review" method="POST">
  <div class="field">
    <label class="label">Enter Rating</label> <input class="input" type="number" placeholder="5 stars max" name="stars">
  </div>  
  <div class="field">
    <div class="select">
      <select name="category" >
        {{#each categories }}
          <option> {{title}} </option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button class="button is-link">Submit rating</button>
    </div>
  </div>
</form>